<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <assignments>
        <name>Set_Public_Price</name>
        <label>Set Public Price</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <assignmentItems>
            <assignToReference>$Record.Public_Price__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>curFmlPublicPrice</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <description>Record-triggered, before insert and before update. If the number of classes or price per class is changed, recalculate the public price.</description>
    <environments>Default</environments>
    <formulas>
        <name>curFmlPublicPrice</name>
        <dataType>Currency</dataType>
        <expression>{!$Record.Number_of_Classes__c} * {!$Record.Public_Price_per_Class__c}</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>StgProg BIBU CalculatePublicPrice {!$Flow.CurrentDateTime}</interviewLabel>
    <label>StgProg BIBU CalculatePublicPrice</label>
    <processMetadataValues>
