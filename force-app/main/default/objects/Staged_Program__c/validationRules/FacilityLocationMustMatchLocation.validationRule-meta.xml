<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>FacilityLocationMustMatchLocation</fullName>
    <active>true</active>
    <description>The primary facility must be within the defined location</description>
    <errorConditionFormula>AND(
  !ISBLANK( Primary_Facility__c ),
  !ISBLANK( Location__c ),
  Primary_Facility__r.TREX1__Location__c  &lt;&gt;  Location__c
)</errorConditionFormula>
    <errorDisplayField>Primary_Facility__c</errorDisplayField>
    <errorMessage>The primary facility must be within the defined location</errorMessage>
</ValidationRule>
