<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>StagedMustHaveAProgram</fullName>
    <active>true</active>
    <description>Staged programs must have a program defined</description>
    <errorConditionFormula>AND(
  ISPICKVAL( Status__c, &quot;Staged&quot; ),
  ISBLANK( Program__c )
)</errorConditionFormula>
    <errorDisplayField>Program__c</errorDisplayField>
    <errorMessage>Staged programs must have a program defined</errorMessage>
</ValidationRule>
