<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>StagedMustHaveACourseSessionName</fullName>
    <active>true</active>
    <description>Staged programs must have a course session name</description>
    <errorConditionFormula>AND(
  ISPICKVAL( Status__c, &quot;Staged&quot; ),
  ISBLANK( Course_Session_Name__c )
)</errorConditionFormula>
    <errorDisplayField>Course_Session_Name__c</errorDisplayField>
    <errorMessage>Staged programs must have a course session name</errorMessage>
</ValidationRule>
